<resources>
    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BottomNavActiveIndicator" parent="">
        <item name="android:color">#80FFFFFF</item>
        <item name="android:alpha">1</item>
        <item name="android:width">48dp</item>
        <item name="android:height">32dp</item>
        <item name="android:insetLeft">12dp</item>
        <item name="android:insetRight">12dp</item>
        <item name="shapeAppearanceOverlay">@style/BottomIndicatorShape</item>
    </style>

    <style name="BottomIndicatorShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomDropdownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:popupBackground">@drawable/dropdown_popup_bg</item>
    </style>
</resources>